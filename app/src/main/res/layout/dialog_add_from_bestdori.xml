<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_choose_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp"
        android:text="@string/tv_select_server_attention" />

    <RadioGroup
        android:id="@+id/rg_region"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1" >

        <RadioButton
            android:id="@+id/radioButton_regionJP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JP" />

        <RadioButton
            android:id="@+id/radioButton_regionEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EN" />

        <RadioButton
            android:id="@+id/radioButton_regionCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="CN" />

        <RadioButton
            android:id="@+id/radioButton_regionTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TW" />

        <RadioButton
            android:id="@+id/radioButton_regionKR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KR" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_choose_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="@string/tv_select_training" />

    <RadioGroup
        android:id="@+id/rg_training_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_before_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:checked="true"
            android:text="特训前" />

        <RadioButton
            android:id="@+id/radioButton_trained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特训后" />
    </RadioGroup>

</LinearLayout>